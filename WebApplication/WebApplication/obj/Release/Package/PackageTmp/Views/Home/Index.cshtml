@{
    ViewBag.Title = "KTB Produktionsübersicht Start";
}
<div class="container" id="chart">
    
    <script>

        function initializeChart() {

            $("#chart").kendoChart({

                title: {
                    text: "Heutige Produktion (t)"
                },
                chartArea: {

                    height: 700

                },
                legend: {
                    position: "top"
                },
                seriesDefaults: {
                    type: "column",
                    stack: true
                },

                dataSource:({
                        transport: {
                            read: "/Home/GetDayCurrentProductionByUnit",
                            dataType: "json"
                        }                           
                }),

                series:[{
                    type: "column",
                    field: "Value",
                    name: "Produktion Edelsplit"
                }],

                categoryAxis: {
                    field: "Name"
                },

                tooltip: {
                    visible: true,
                    format: "{0} t"
                }
               
            });
        }

        $(document).ready(initializeChart);
        $(document).bind("kendo:skinChange", initializeChart);
    </script>
</div>
