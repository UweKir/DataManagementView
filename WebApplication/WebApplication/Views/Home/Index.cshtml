<div>
    <div class="demo-section k-content wide">
        <div id="chart"></div>
    </div>
    <script>

        function initializeChart() {

            $("#chart").kendoChart({

                title: {
                    text: "Heutige Produktion (t)"
                },
                legend: {
                    position: "top"
                },
                seriesDefaults: {
                    type: "column",
                    stack: true
                },

                dataSource:({
                        transport: {
                            read: "/Home/GetDayCurrentProductionByUnit",
                            dataType: "json"
                        }                           
                }),

                series:[{
                    type: "column",
                    field: "Value",
                    name: "Produktion Edelsplit"
                }],

                categoryAxis: {
                    field: "Name"
                },

                tooltip: {
                    visible: true,
                    format: "{0} t"
                }
               
            });
        }

        

