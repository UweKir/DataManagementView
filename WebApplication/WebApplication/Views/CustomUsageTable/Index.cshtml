        $(document).ready(function () {
            initializeGrid($("#datepicker").data("kendoDatePicker").value(), $("#datepicker2").data("kendoDatePicker").value());
        });

        function initializeGrid(startDate, endDate) {
            $("#grid").html("");
            $("#grid").kendoGrid({

                toolbar: ["excel"],
                excel: {
                    fileName: "Verbrauch_" + kendo.toString(startDate, "yyyy-MM-dd") + "-" + kendo.toString(endDate, "yyyy-MM-dd") + ".xlsx",
                    filterable: true
                },
                dataSource: {
                    transport: {
                        read: "/CustomUsageTable/GetCustomUsageTableData?startDate=" + kendo.toString(startDate, "yyyy-MM-dd HH:mm:ss") + "&endDate=" + kendo.toString(endDate, "yyyy-MM-dd HH:mm:ss"),
                        dataType: "json"
                    },
                    schema: {
                        model: {
                            id: "Name",
                            fields: {
                                Location: { type: "string" },
                                Device: { type: "string" },
                                Name: { type: "string" },
                                Value: { type: "number" },
                                Unit: { type: "string" }
                            }
                        }
                    },
                    pageSize: 15,
                    group: [
                        {
                            field: "Location"
                        },
                        {
                            field: "Unit",
                            aggregates: [
                                { field: "Value", aggregate: "sum" }
                            ]
                        }
                    ], // set grouping for the dataSource
                    aggregate: [{ field: "Value", aggregate: "sum" }]
                    //serverPaging: true,
                    //serverFiltering: true,
                    //serverSorting: true
                },
                height: 800,
                filterable: true,
                sortable: true,
                pageable: true,
                columns: [
                    {
                        field: "Location",
                        title: "Ort",
                        width: "20%",
                        filterable: true
                    },
                    {
                        field: "Device",
                        title: "Verbraucher",
                        width: "30%",
                        filterable: true
                    },
                    {
                        field: "Name",
                        title: "Artikel",
                        width: "20%",
                        filterable: false
                    },
                    {
                        field: "Value",
                        title: "Wert",
                        width: "20%",
                        format: "{0:0.00}",
                        aggregates: ["sum"],
                        groupFooterTemplate: function (e) {
                            return "Total: " + kendo.toString(e.Value.sum, "n2");
                        }//"Total: #=sum#"

                    },
                    {
                        field: "Unit",
                        title: "Einheit",
                        width: "10%"
                    }
                ]

            });
        }
